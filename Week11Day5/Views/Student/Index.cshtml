@model IEnumerable<Week11Day5.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Student List</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="GetByName">
            <div class="row form-group">
                <div class="col-md-4">
                    <label class="control-label">Search By Student</label>
                    <input type="text" name="studentName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Show Students" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RollNo</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>
